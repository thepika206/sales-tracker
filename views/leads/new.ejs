<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1> New Lead </h1>
  <section>
    <div class="card mb-3">
      <h4 class="card-header">Lead Information</h4>
      <div class="card-body">
        <form action="/leads" method="POST">
          <!-- Lead Name -->
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" required type="text" class="form-control" id="name" placeholder="Full Name" autocomplete="off">
          </div>
          <label class="mb-3"> Status (Choose Closed if lead is already sold)
            <select name="status" class="form-select" aria-label="Lead Status">
              <option value="New" selected>New</option>
              <option value="Working">Working</option>
              <option value="Closed">Closed</option>
            </select>
          </label>
          <div class="mb-3">
            <label for="value" class="form-label">Value</label>
            <input name="value" type="number" class="form-control" id="value" placeholder="Estimated Deal Value" autocomplete="off">
          </div>
          <!-- Lead Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" id="description" rows="3" placeholder="client needs, any special notes for handling"></textarea>
          </div>
          <!-- Save button to create the lead -->
          <button type="submit" class="btn btn-primary">Create Lead</button>
          
        </form>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>