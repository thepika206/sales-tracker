<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>Click the lead name to manage it</p>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Agent</th>
        <th scope="col">Status</th>
        <th scope="col">Value</th>
      </tr>
    </thead>
    <tbody>
      <% if (leads.length > 0) { %>
        <% leads.forEach((lead, idx) => { %>
          <tr>
            <td scope="row"><%= idx+1 %></td>
            <td><a href="/leads/<%= lead._id %>"> <%= lead.name %> </a> </td>
            <td><img src="<%= lead.owner.avatar %>" alt="" class="small-round-avatar"><%= lead.owner.name %></td>
            <td><%= lead.status %></td>
            <td>$<%= lead.value %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td></td>
          <td></td>
          <td>You have no Leads - Please enter some <a href="/leads/new">New Leads</a></td>
          <td></td>
          <td></td>
        </tr>
      <% } %>
    </tbody>
  </table>
        
      

</main>

<%- include('../partials/footer') %>